<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

        <!--
            Base application theme, dependent on API level. This theme is replaced
            by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


        -->
        <style name="AppBaseTheme" parent="android:Theme.Light">
            <!--
                Theme customizations available in newer API levels can go in
                res/values-vXX/styles.xml, while customizations related to
                backward-compatibility can go here.


            -->
        </style>

        <style name="BtnOkStyle">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:background">@drawable/btn_ok_selector</item>
            <item name="android:textColor">@drawable/btn_ok_text_selector</item>
        </style>

        <style name="BtnNetStep" parent="@style/BtnOkStyle">
            <item name="android:drawableRight">@drawable/next</item>
            <item name="android:onClick">nextStep</item>
        </style>

        <style name="BtnPreStep" parent="@style/BtnOkStyle">
            <item name="android:drawableLeft">@drawable/pre</item>
            <item name="android:onClick">preStep</item>
        </style>

        <style name="BtnCancelStyle">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:background">@drawable/btn_cancel_selector</item>
        </style>

        <style name="TitleBarStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">46dp</item>
            <item name="android:background">@color/titleBarColor</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">20sp</item>
        </style>

        <style name="TextNormal">
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">#88000000</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">match_parent</item>
        </style>

        <!-- 分割线 -->
        <style name="divider">
            <item name="android:layout_width">match_parent</item>
            <item name="android:background">#33000000</item>
            <item name="android:layout_height">1px</item>
        </style>

        <style name="TipText" parent="@style/TextNormal">
            <item name="android:textSize">14sp</item>
            <item name="android:drawableLeft">@drawable/dialog_title_default_icon</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:drawablePadding">6dp</item>
        </style>

        <!-- 自定义Dialog -->
        <style name="dlg_style" parent="@android:style/Theme.Dialog">
            <item name="android:windowBackground">@color/white</item>
            <item name="android:windowNoTitle">true</item>
            <!-- 设置动画 -->
            <item name="android:windowAnimationStyle">@style/dlg_anim</item>
        </style>

        <!-- 进入退出动画 -->
        <style name="dlg_anim" parent="@android:style/Animation.Dialog">
            <item name="android:windowEnterAnimation">@anim/dlg_bottom_enter</item>
            <item name="android:windowExitAnimation">@anim/dlg_bottom_exit</item>
        </style>

        <style name="pop_anim" parent="@android:style/Animation.Dialog">
            <item name="android:windowEnterAnimation">@anim/pop_enter</item>
            <item name="android:windowExitAnimation">@anim/pop_exit</item>
        </style>


        <style name="widget_text">
            <item name="android:textSize">16.0dip</item>
            <item name="android:textColor">#ff000000</item>
        </style>

</resources>