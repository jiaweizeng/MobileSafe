<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_setting_title"
        style="@style/TitleBarStyle"
        android:gravity="center"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:text="安全号码" />

        <TextView
            android:id="@+id/tv_safe_number"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="188" />
    </RelativeLayout>

    <View style="@style/divider" />

    <RelativeLayout
        android:id="@+id/rl_setup_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_item_selector"
        android:padding="4dp" >

        <TextView
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:text="防盗保护是否开启" />

        <ImageView
            android:id="@+id/iv_sjfd_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/unlock" />
    </RelativeLayout>

    <View style="@style/divider" />

    <TextView
        android:id="@+id/tv_reenter_setup"
        style="@style/TextNormal"
        android:background="@drawable/text_item_selector"
        android:padding="8dp"
        android:text="重新进入设置向导" />

    <View style="@style/divider" />

    <TextView
        style="@style/TextNormal"
        android:background="#88000000"
        android:padding="4dp"
        android:text="功能简介"
        android:textColor="@android:color/white" />

    <TextView
        style="@style/TipText"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:text="GPS追踪:#*location*#" />
    
    

    <TextView
        style="@style/TipText"
        android:padding="4dp"
        android:text="远程销毁数据:#*wipedata*#" />

    <TextView
        style="@style/TipText"
        android:padding="4dp"
        android:text="播放报警音乐:#*alarm*#" />

    <TextView
        style="@style/TipText"
        android:padding="4dp"
        android:text="远程锁屏:#*lockscreen*#" />

</LinearLayout>